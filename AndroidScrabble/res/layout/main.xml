<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">
    <MediaController android:layout_width="match_parent" android:id="@+id/mediaController1"
	android:layout_weight="0.08" android:layout_height="wrap_content">
        <TextView android:text="Alfapet" android:textSize="42dp" android:layout_width="match_parent" android:id="@+id/textView1" android:gravity="center_horizontal" android:layout_height="wrap_content"></TextView>
    </MediaController>
    <LinearLayout android:weightSum="1" android:id="@+id/linearLayout1" android:layout_weight="0.08" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:id="@+id/button1" android:text="New Game" android:layout_weight="0.11" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
        <Button android:id="@+id/button2" android:text="Settings" android:layout_weight="0.08" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
        <Button android:id="@+id/button3" android:text="Help" android:layout_weight="0.11" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
        <Button android:id="@+id/button4" android:text="About" android:layout_weight="0.11" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
    </LinearLayout>
    <ListView android:layout_weight="0.08" android:layout_marginBottom="5dp" android:layout_width="match_parent" android:id="@+id/listView1" android:layout_height="wrap_content" android:layout_marginTop="5dp"></ListView>
</LinearLayout>
