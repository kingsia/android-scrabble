<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">
    <MediaController android:layout_width="match_parent" android:id="@+id/mediaController1"
        android:layout_weight="0.08" android:layout_height="wrap_content">
        <TextView android:text="@string/app_name" android:textSize="42dp" android:layout_width="match_parent" android:gravity="center_horizontal" android:layout_height="wrap_content" android:id="@+id/appName"></TextView>
    </MediaController>
    <LinearLayout android:weightSum="1" android:layout_weight="0.08" android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/buttonsLayout">
        <Button android:text="@string/new_game" android:layout_weight="0.11" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/newGameButton"></Button>
        <Button android:text="@string/settings" android:layout_weight="0.08" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/settingsButton"></Button>
        <Button android:text="@string/help" android:layout_weight="0.11" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/helpButton"></Button>
        <Button android:text="@string/about" android:layout_weight="0.11" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/aboutButton"></Button>
    </LinearLayout>
    <ListView android:layout_weight="0.08" android:layout_marginBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:id="@+id/gamesView"></ListView>
</LinearLayout>