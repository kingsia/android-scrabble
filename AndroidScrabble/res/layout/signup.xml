<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent">
	<TextView 
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_width="match_parent" android:textColor="#FF0000"
		android:textStyle="bold" android:layout_height="50dp" android:id="@+id/nameTaken"></TextView>
	<TextView android:text="@string/signup_header"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_width="match_parent" android:id="@+id/header"
		android:layout_height="30dp"></TextView>
	<EditText android:layout_width="match_parent"
		android:layout_height="wrap_content" android:id="@+id/username">
		<requestFocus></requestFocus>
	</EditText>
	<Button android:layout_height="wrap_content" android:text="@string/signup_submit"
		android:layout_width="match_parent" android:id="@+id/submit"></Button>
</LinearLayout>